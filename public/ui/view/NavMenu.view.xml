<core:View
	controllerName="ui.view.NavMenu"
	xmlns="sap.m"
	xmlns:core="sap.ui.core"
	xmlns:l="sap.ui.layout" >
	<Page
		title="{i18n>/NavMenuTitle}" >
		<List
			id="NavMenuList"
			mode="{device>/listMode}"
			select="handleNavMenuListSelect">
			<StandardListItem
				icon="{icon>/Dashboard}"
				title="{i18n>/DashboardTitle}">
			</StandardListItem>
			<StandardListItem
				icon="{icon>/LetsLunch}"
				title="{i18n>/LetsLunchTitle}">
			</StandardListItem>
			<StandardListItem
				icon="{icon>/LunchMeets}"
				title="{i18n>/LunchMeetsTitle}">
			</StandardListItem>
			<StandardListItem
				icon="{icon>/Preferences}"
				title="{i18n>/PreferencesTitle}">
			</StandardListItem>
		</List>

		<footer>
			<Bar>
				<contentRight>
					<Button visible="{= ${device>/isPhone}  ? false : true }" text="{i18n>/ShowHideMenu}" icon="" press="handleSplitAppMode" />
				</contentRight>
			</Bar>
		</footer>
	</Page>
</core:View>