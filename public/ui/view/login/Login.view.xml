<core:View
	controllerName="ui.view.login.Login"
	xmlns:u="sap.ui.unified"
	xmlns="sap.uxap"
	xmlns:m="sap.m"
	xmlns:l="sap.ui.layout"
	xmlns:form="sap.ui.layout.form"
	xmlns:core="sap.ui.core"
	height="100%">
	<m:Page
		title="{i18n>/LoginTitle}"
		class="sapUiFioriObjectPage"
		showNavButton="{device>/isPhone}"
		navButtonPress="handleNavButtonPress">

			<m:Panel class="sapUiResponsiveContentPadding">
				<l:VerticalLayout width="100%">
	        		<m:Label text="Username" design="Bold"/>
		            <m:Input id="userID" value="{/username}"/>
				</l:VerticalLayout>
				<l:VerticalLayout width="100%">
	        		<m:Label text="Password" design="Bold"/>
		            <m:Input id="userPWD" value="{/password}" type="Password" />
				</l:VerticalLayout>
			</m:Panel>
	    <m:footer>
	    	<m:Bar>
	    		<m:contentRight>
	    			<m:Button enabled="{
      							parts: ['/username', '/password'],
      							formatter: 'ui.util.Formatter.loginEnable'
      							}" text="Login" type="Emphasized" icon="sap-icon://log" press="handleLoginBtnPress" />
	    		</m:contentRight>
	    	</m:Bar>
	    </m:footer>

	</m:Page>
</core:View>



