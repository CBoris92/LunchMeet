<core:View
	controllerName="ui.view.letslunch.LetsLunch"
	xmlns="sap.m"
	xmlns:core="sap.ui.core"
	xmlns:html="http://www.w3.org/1999/xhtml"
	xmlns:l="sap.ui.layout">
	<Page
		title="{i18n>/LetsLunchTitle}"
		showNavButton="{device>/isPhone}"
		navButtonPress="handleNavBackToMenu">

		<List id="ListCardsId" backgroundDesign="Transparent" items="{users>/users}">
			<CustomListItem visible="{users>visible}" >
				<Panel width="auto" class="sapMTile sapUiResponsiveMargin">
					<content>

						<VBox alignItems="Center">
							<Image class="boxShadow2 resizeCardImg" src="{users>picture}" densityAware="false" />
							<Label class="labelForPic" textAlign="Center" design="Bold" text="{users>fullname}"/>
						</VBox>


					 	<IconTabBar
							alignItems="Center"
							id="idIconTabBarMulti"
							expanded="false"
							class="noBottomBorder sapUiResponsiveContentPadding">
							<items>
								<IconTabFilter
									icon="sap-icon://hint" expanded="true">
									<List>
										<StandardListItem title="Dernier LunchMeet">
										</StandardListItem>
									</List>
								</IconTabFilter>
								<IconTabFilter
									icon="{icon>/Favorites}"
									count="3">
									<List>
										<StandardListItem title="Top Resto">
										</StandardListItem>
									</List>
								</IconTabFilter>
								<IconTabFilter
									icon="sap-icon://comment"
									count="25">
									<List>
										<StandardListItem title="Dernier Commentaire">
										</StandardListItem>
									</List>
								</IconTabFilter>
							</items>
						</IconTabBar>

						<l:HorizontalLayout></l:HorizontalLayout>
						<Bar class="choicesBar">
							<contentMiddle>
								<Button press="handleChoiceBtnPressed" icon="{icon>/Rewind}" 		class="resizeChoiceIcon" />
								<Button press="handleChoiceBtnPressed" icon="{icon>/Dislike}" 		class="mainChoices sapUiMediumMarginEnd" />
								<Button press="handleChoiceBtnPressed" icon="{icon>/Like}" 			class="mainChoices"/>
								<Button press="handleChoiceBtnPressed" icon="{icon>/Superlike}" class="resizeChoiceIcon"	/>
							</contentMiddle>
						</Bar>	
					</content>
				</Panel>
			</CustomListItem>
		</List>

		<footer>
			
		</footer>
	</Page>
</core:View>