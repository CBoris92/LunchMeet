<core:View
	controllerName="ui.view.lunchmeets.LunchMeets"
	xmlns="sap.m"
	xmlns:core="sap.ui.core" >
	<Page
		title="{i18n>/LunchMeetsTitle}"
		showNavButton="{device>/isPhone}"
		navButtonPress="handleNavBackToMenu">
		<subHeader>
			<Bar>
				<contentLeft>
					<SearchField
						search="handleSearch"
						width="100%" >
					</SearchField>
				</contentLeft>
			</Bar>
		</subHeader>
		<List
			id="LunchMeetsList"
			mode="{device>/listMode}"
			selectionChange="handleListSelect"
			items="{lunchmeets>/lunchmeets}">
			<ObjectListItem
				type="{device>/listItemType}"
				press="handleListItemPress"
				title="{lunchmeets>restaurant/name}"
				number="{lunchmeets>price}"
				numberUnit="{lunchmeets>priceUnit}"
				numberState="{
					parts:[
						{path:'lunchmeets>budget'},
						{path:'lunchmeets>price'}
					], formatter:'ui.util.Formatter.priceStatus'}"
				class="statusWarning" >
				<attributes>
					<ObjectAttribute text="{lunchmeets>restaurant/address}" />
				</attributes>
				<firstStatus>
					<ObjectStatus
						text="{path:'lunchmeets>date', formatter:'ui.util.Formatter.date'}"
						state="trendy" />
				</firstStatus>
			</ObjectListItem>
		</List>

		<footer>			
		</footer>
	</Page>
</core:View>